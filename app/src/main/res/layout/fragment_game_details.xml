<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <ImageView
        android:id="@+id/game_details_background_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:background="#ff7e8082" />

    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="com.game.metacritic.gamecenter.app.fragments.GameDetailsFragment">

        <LinearLayout
            android:id="@+id/game_details_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="30.44"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30">
                    <ImageView
                        android:id="@+id/game_thumbnail_image_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitCenter"
                        android:layout_gravity="top"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/add_game_button"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:textSize="10dp"
                        android:drawablePadding="5dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:layout_gravity="right" />

                    <TextView
                        android:id="@+id/game_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:clickable="false"
                        android:textSize="20dp"
                        android:lines="1"
                        />
                    <TextView
                        android:id="@+id/game_platform_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wii U"
                        android:textColor="#ff3e3e3e"
                        android:gravity="left|center_vertical"
                        android:clickable="false"
                        android:lines="1"
                        />
                    <TextView
                        android:id="@+id/game_publisher_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Publisher"
                        android:textColor="#ff3e3e3e"
                        android:gravity="left|center_vertical"
                        android:clickable="false"

                        />
                    <LinearLayout
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Score"
                        android:textColor="@color/black"
                        android:gravity="left|center_vertical"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:layout_gravity="center" />
                        <TextView
                            android:id="@+id/game_rating_text_view"
                            android:background="@color/Green"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textSize="20dp"
                            android:textAlignment="center"
                            android:text="98"
                            android:textColor="@color/White"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/release_date_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Release date:"
                    android:textColor="@color/black"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/genre_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genre:"
                    android:textColor="@color/black"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/esrb_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESRB: "
                    android:textColor="@color/black"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/user_score_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User rating: "
                    android:textColor="@color/black"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/game_developer_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developer: "
                    android:textColor="@color/black"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/game_url_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Url to Metacritic: "
                    android:textColor="@color/blue"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>