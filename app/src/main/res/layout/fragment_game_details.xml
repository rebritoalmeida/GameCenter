<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <ImageView
        android:id="@+id/game_details_background_image_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
        android:background="@color/black" />

    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="com.game.metacritic.gamecenter.app.fragments.GameDetailsFragment">

        <LinearLayout
            android:id="@+id/game_details_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30">
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/game_thumbnail"
                        android:layout_gravity="top"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/add_game_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add"/>
                    <TextView
                        android:id="@+id/game_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Title: "
                        android:textColor="@color/white"
                        android:clickable="false"
                        android:paddingTop="10dp"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="80"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/game_platform_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Platform:"
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/game_score_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score:"
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/release_date_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Release date:"
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/genre_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genre:"
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/rate_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rate:"
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/user_score_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User score: "
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/game_publisher_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publisher: "
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/game_developer_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Developer: "
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/game_url_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Url to Metacritic: "
                    android:textColor="@color/white"
                    android:gravity="left|center_vertical"
                    android:clickable="false"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>